<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SquareRelativeLayout">
        <attr name="base" format="enum">
            <enum name="height" value="0" />
            <enum name="width" value="1" />
        </attr>
    </declare-styleable>
    <declare-styleable name="ScaledRelativeLayout">
        <attr name="scaleBase" format="enum">
            <enum name="height" value="0" />
            <enum name="width" value="1" />
        </attr>
        <attr name="heightScale" format="integer"/>
        <attr name="widthScale" format="integer"/>
    </declare-styleable>
</resources>